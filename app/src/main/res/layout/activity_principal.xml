<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pongsrl.louvain.app.Principal">

    <RelativeLayout
        android:id="@+id/relativeBanner"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="#95310f">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/titulomenu" />



    </RelativeLayout>



    <HorizontalScrollView android:id="@+id/contenido"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/relativeBanner">
        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#99000000"
            >


            <ImageView
                android:id="@+id/content1"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/principal1"
                />
            <ImageView
                android:id="@+id/content2"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/principal2"

                />
            <ImageView
                android:id="@+id/content3"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/principal3"
                />



        </LinearLayout>

    </HorizontalScrollView>


    <Button
        android:id="@+id/btnQuienes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/contenido"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnquienes"
        />



    <Button
        android:id="@+id/btnDecide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnQuienes"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btndecide"/>



    <Button
        android:id="@+id/btnContactanos"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnQuienes"
        android:layout_alignParentRight="true"
        android:background="@drawable/btncontactanos"/>




    <RelativeLayout
        android:id="@+id/relativeFooter"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="#95310f"
        android:layout_alignParentBottom="true"
        >

    </RelativeLayout>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pongsrl.louvain.app.Contacto">

    <RelativeLayout
        android:id="@+id/relativeBanner"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="#95310f"
        >

        <Button
            style="@android:style/Widget.Button.Small"
            android:id="@+id/botonmenu"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/btnmenu"

            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/titulomenu"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/botonmenu"
            android:layout_centerVertical="true"
            android:paddingLeft="0dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:src="@drawable/titulovideos"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/relativeBanner"
        android:layout_alignParentRight="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/btnfb"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTwitter"
        android:layout_below="@+id/btnFacebook"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/btntwitter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnYoutube"
        android:layout_below="@+id/btnTwitter"
        android:layout_alignParentRight="true"
        android:layout_marginTop="59dp"
        android:background="@drawable/btnyoutube"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMail"
        android:layout_below="@+id/btnYoutube"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/btnmail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos Institucionales"
        android:id="@+id/btnVideos"
        android:layout_alignBottom="@+id/btnFacebook"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mas videos"
        android:id="@+id/btnmasVideos"
        android:layout_alignTop="@+id/btnTwitter"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmasVideos"
        android:paddingTop="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text=" Dirección: Calle 21 N°17
 Achumani La Paz-Bolivia

 Telefono/Fax: 591-2-2711557 – 2713222

 Email: info@louvaincooperation.org"/>


</RelativeLayout>

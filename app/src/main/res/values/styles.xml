<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBartab</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbarcolor</item>

    </style>
    <!-- ActionBartab styles -->
    <style name="MyActionBartab" parent="android:Widget.Holo.Light.ActionBar.TabBar.Inverse">
        <item name="android:background">@drawable/actionbarcolor</item>

    </style>
</resources>
